/* pages/points/index.wxss */
.body{
  padding: 20rpx 40rpx 120rpx 40rpx;
}
.title{
  font-size: 34rpx;
  color: #AC001F;
  font-weight: bold;
  display: block;
  text-align: center;
}

.body > image {
  width:100%;
  height:320rpx;
  margin-top:20rpx;
}

.text-content{
   font-size: 22rpx;
   color:7A8288;
   padding: 0 30rpx 40rpx 30rpx;
}
.text-content > text{
  display: block;
}

.text-content text.small{
  font-size: 20rpx;
  display: block;
  margin-left:20rpx;
}

.card {
  position: relative;
  margin-bottom:60rpx;
}
.card-bg{
  width:100%;
  position: absolute;
  right:0;
  top:0;
  left:0rpx;
  bottom:0;
  z-index:-1;
  height:480rpx;
}
.card-icon{
  width:140rpx;
  height:140rpx;
  position: absolute;
  top:0rpx;
  left:50rpx;
  z-index:2;
}
.card-list{
  padding-top:186rpx;
}
.card-list-col-1{
  display: flex;
  align-items: center;
  justify-content: center;
}
.row{
  flex:1;
  display:flex;
  align-items: center;
  justify-content: center;
}

.row image{
  width:64rpx;
  height:64rpx;
  margin:0 20rpx 0 30rpx;
}
.text-block{
  flex: 1;
}
.text-block > text{
  font-size: 22rpx;
  display:inline-block;
  padding:20rpx 0;
}

.card-3 .gold-text{
  font-size: 24rpx;
  color:#DFC45F;
}

.card-2 .gold-text{
  font-size: 24rpx;
  color:#9A9A9A;
}

.card-1 .gold-text{
  font-size: 24rpx;
  color:#AE0004;
}

.card-1 .card-bg{
  height:380rpx;
}